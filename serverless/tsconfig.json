{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "lib": [
        "es2020",
        "dom"
      ],
      "allowJs": true,
      "strict": true,
      "esModuleInterop": true,
      "removeComments": true,
      "outDir": "dist"
    },
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*",
      "*.config.js",
      "**/*.js",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.test.js",
      "**/*.spec.js"
    ]
  }
